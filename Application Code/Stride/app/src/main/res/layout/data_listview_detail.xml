<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/xTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="104dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@+id/timeTextView"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/yTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/xTextView"
        android:layout_alignBottom="@+id/xTextView"
        android:layout_toEndOf="@+id/xTextView"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/zTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/yTextView"
        android:layout_alignBottom="@+id/yTextView"
        android:layout_toEndOf="@+id/yTextView"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/xTextView"
        android:layout_alignBottom="@+id/xTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp" />
</RelativeLayout>